:set number
:set backspace=indent,eol,start
:syntax on
:set ruler
:set backup
:set backupdir=$HOME/.vim/backup
:set history=50
:set background=dark
:set showcmd
:set incsearch
:set hlsearch
:set autoindent
:set cindent
:set smartindent
:set showmode
:set foldmethod=syntax
:set foldnestmax=5
:set tabstop=4
:set expandtab
:set showtabline=2
:set shiftwidth=4
:set filetype=on

":set list on "Show non-Printables

set grepprg=grep\ -nH\ $*
let g:tex_flavor = "latex"

